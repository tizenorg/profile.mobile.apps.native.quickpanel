				}
			}
			program {
				name: "text.show";
				signal: "show";
				source: "qp.handler.text";
				action: STATE_SET "text.show" 0.0;
				target: "qp.handler.button";
				target: "qp.handler.text";
			}
			program {
				name: "text.hide";
				signal: "hide";
