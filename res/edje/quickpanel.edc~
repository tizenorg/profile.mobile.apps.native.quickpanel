				action: STATE_SET "text.hide" 0.0;
				target: "qp.handler.button";
				target: "qp.handler.text";
			}
			program {
				name: "handler.press";
				signal: "mouse,down,1";
				source: "qp.handler.bg";
				action: STATE_SET "pressed" 0.0;
